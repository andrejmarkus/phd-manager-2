@inject NavigationManager Navigation

@using System.Globalization

<MudSelect Underline="false" @bind-Value="Culture">
    @foreach (var culture in _cultures)
    {
        <MudSelectItem Value="@culture.Key">
            <MudImage  Class="mr-2" Width="30" Src="@culture.Value" />
        </MudSelectItem>
    }
</MudSelect>

@code
{
    private readonly Dictionary<CultureInfo, string> _cultures = new() {
        { new CultureInfo("sk-SK"), "https://flagicons.lipis.dev/flags/4x3/sk.svg" },
        { new CultureInfo("en-US"), "https://flagicons.lipis.dev/flags/4x3/us.svg" }
    };

    protected override void OnInitialized()
    {
        Culture = CultureInfo.CurrentCulture;
    }

    private CultureInfo Culture
    {
        get => CultureInfo.CurrentCulture;
        set
        {
            if (Equals(CultureInfo.CurrentCulture, value)) return;

            var uri = new Uri(Navigation.Uri)
                .GetComponents(UriComponents.PathAndQuery, UriFormat.Unescaped);
            var cultureEscaped = Uri.EscapeDataString(value.Name);
            var uriEscaped = Uri.EscapeDataString(uri);

            var fullUri = $"Culture/Set?culture={cultureEscaped}&redirectUri={uriEscaped}";
            Navigation.NavigateTo(fullUri, forceLoad: true);
        }
    }
}