@inherits LayoutComponentBase

<MudThemeProvider @rendermode="InteractiveServer" Theme="_friTheme" />
<MudPopoverProvider @rendermode="InteractiveServer" />
<MudDialogProvider @rendermode="InteractiveServer" />
<MudSnackbarProvider @rendermode="InteractiveServer" />

<MudLayout>
    <MainLayoutNavigation />
    <MudMainContent Class="ml-14 pa-4">
        @Body
    </MudMainContent>
</MudLayout>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {

    private readonly MudTheme _friTheme = new()
    {
        PaletteLight = new PaletteLight
        {
            Primary = Colors.Yellow.Darken2,
            AppbarBackground = Colors.Yellow.Darken1
        }
    };
}


