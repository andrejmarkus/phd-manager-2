@inherits LayoutComponentBase

<MudThemeProvider Theme="FriTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Class="mr-2" Color="Color.Surface" Size="@Size.Medium" Icon="@Icons.Material.Outlined.Menu" OnClick="DrawerToggle" />
        <MudLink Href="/">
            <MudImage Src="uniza_logo.png" Height="40" />
        </MudLink>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool _drawerOpen = true;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme FriTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = Colors.Yellow.Darken2,
            AppbarBackground = Colors.Yellow.Darken1
        }
    };
}


