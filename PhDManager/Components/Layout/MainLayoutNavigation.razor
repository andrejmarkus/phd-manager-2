@using PhDManager.Components.Layout
@using PhDManager.Components.Shared

@rendermode InteractiveServer

<MudAppBar style="position: sticky;" Elevation="1">
    <MudIconButton Color="Color.Inherit" Size="@Size.Medium" Edge="Edge.Start" Icon="@Icons.Material.Filled.Menu" OnClick="ToggleOpen" />
    <MudLink Href="/">
        <MudImage Class="logo" Src="@Assets["uniza_logo.png"]" Height="40" />
    </MudLink>
    <MudSpacer />
    <MudStack>
        <CultureSelect />
    </MudStack>
</MudAppBar>

<MudDrawer Class="mud-drawer-fixed" @bind-Open="@_open" Variant="DrawerVariant.Mini" OpenMiniOnHover="true" Fixed="false" Breakpoint="Breakpoint.Xs" Elevation="2">
    <NavMenu />
</MudDrawer>

@code {
    private bool _open = false;

    public void ToggleOpen()
    {
        _open = !_open;
    }
}
