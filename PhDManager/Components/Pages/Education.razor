@page "/management/education"

@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using PhDManager.Components.Shared
@using PhDManager.Locales
@using PhDManager.Models.Roles

@rendermode InteractiveServer

@inject IStringLocalizer<Resources> Localizer

@attribute [Authorize(Roles = $"{Admin.Role}")]

<PageTitle>@Localizer["Education"]</PageTitle>

<MudTabs Elevation="0">
    <MudTabPanel Text="@Localizer["Departments"]">
        <Departments />
    </MudTabPanel>
    <MudTabPanel Text="@Localizer["StudyPrograms"]">
        <StudyPrograms />
    </MudTabPanel>
    <MudTabPanel Text="@Localizer["Subjects"]">
        <Subjects />
    </MudTabPanel>
</MudTabs>
