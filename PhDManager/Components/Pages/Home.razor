@page "/"

@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>

<MudStack class="height-screen" StretchItems="StretchItems.Middle">
    <div class="full-size circle circle-bottom"></div>
    <div class="full-size circle circle-top"></div>
    <AuthorizeView>
        <Authorized>
            <MudStack Class="height-full" Justify="Justify.Center" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.h3">Welcome, @context.User.Identity.Name</MudText>
                <MudText>Pre navigáciu použite bočný panel.</MudText>
            </MudStack>
        </Authorized>
        <NotAuthorized>
            <div class="full-size responsive-row">
                <div class="d-flex flex-column gap-3">
                    <MudText Typo="Typo.h3"><span class="underline">Uľahčite</span> si štúdium.</MudText>
                    <MudText Typo="Typo.h5">Prihláste sa a zahoďte papiere za hlavu!</MudText>
                    <div>
                        <MudButton Class="mr-2" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => NavigationManager.NavigateTo("Account/Login"))">Prihlásiť sa</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Info" OnClick="@(() => NavigationManager.NavigateTo("theses"))">Nájdi tému</MudButton>
                    </div>
                </div>
                <div class="container-image landing-basis">
                    <div class="circle-image"></div>
                    <MudImage Class="full-size" Src="@Assets["digital-nomad.svg"]" />
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</MudStack>